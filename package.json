{
  "name": "roguelike-cards",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.8"
  },
  "scripts": {
    "start": "npm-run-all -p watch-styles-sass start-js",
    "build": "npm run stylelint-build && react-scripts build",
    "start-js": "react-scripts start",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "eslint": "eslint \"src/**/*.js\"",
    "stylelint-dev": "stylelint src/**/*.scss --cache --cache-location \"./.stylelintcache\" ; exit 0",
    "stylelint-build": "stylelint 'src/**/*.scss'",
    "watch-styles-sass": "npm-watch"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "watch": {
    "stylelint-dev": {
      "patterns": [
        "/src/**/*.scss"
      ],
      "extensions": "scss"
    }
  },
  "devDependencies": {
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "standard": "^12.0.1",
    "stylelint": "^9.10.1",
    "stylelint-config-rational-order": "0.0.4",
    "stylelint-order": "^2.1.0"
  }
}
